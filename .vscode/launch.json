    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Unit Tests In Current File",
            "sourceMaps": true,
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["${file}", "${fileBasenameNoExtension}"],
            "outFiles": ["${workspaceFolder}/**/*.js", "!**/node_modules/**"]
          },
    ]
}